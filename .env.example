POSTGRES_DB=hotelier_dev
POSTGRES_USER=hotelier_dev
POSTGRES_PASSWORD=hotelier_dev_password
POSTGRES_PORT=5432

# Shared database URL used by backend containers (core services / API gateway)
DATABASE_URL=postgresql://hotelier_dev:hotelier_dev_password@backend-db:5432/hotelier_dev

# Auth-service dedicated Postgres instance
AUTH_POSTGRES_DB=hotelier_auth_dev
AUTH_POSTGRES_USER=hotelier_auth_dev
AUTH_POSTGRES_PASSWORD=hotelier_auth_dev_password
AUTH_POSTGRES_PORT=5433
AUTH_DATABASE_URL=postgresql://hotelier_auth_dev:hotelier_auth_dev_password@auth-service-db:5432/hotelier_auth_dev

# Config-service dedicated Postgres instance
CONFIG_POSTGRES_DB=hotelier_config_dev
CONFIG_POSTGRES_USER=hotelier_config_dev
CONFIG_POSTGRES_PASSWORD=hotelier_config_dev_password
CONFIG_POSTGRES_PORT=5434
CONFIG_DATABASE_URL=postgresql://hotelier_config_dev:hotelier_config_dev_password@config-service-db:5432/hotelier_config_dev

# Parking-service dedicated Postgres instance
PARKING_POSTGRES_DB=hotelier_parking_dev
PARKING_POSTGRES_USER=hotelier_parking_dev
PARKING_POSTGRES_PASSWORD=hotelier_parking_dev_password
PARKING_POSTGRES_PORT=5435
PARKING_DATABASE_URL=postgresql://hotelier_parking_dev:hotelier_parking_dev_password@parking-service-db:5432/hotelier_parking_dev

# pgAdmin credentials
PGADMIN_EMAIL=admin@hotelier.dev
PGADMIN_PASSWORD=admin123

# Shared wiring ports
API_PORT=3001
APP_PORT=3000

# Public URLs used by the frontend (from browser)
